{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "skipLibCheck": true
    },
    "types": ["@types/webextension-polyfill", "@octokit/types"],
    "include": ["source/**/*.ts"],
    "exclude": ["node_modules", "distribution"]
  }